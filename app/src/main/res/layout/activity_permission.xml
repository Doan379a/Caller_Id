<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="25dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:paddingHorizontal="16dp"
                android:text="@string/permission"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/opensans_semibold_600"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_132sdp"
                android:layout_height="@dimen/_132sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_permission"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bg_border_item_permission"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_set_default_SMS_permission"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/opensans_semibold_600"
                        android:text="@string/allow_app_to_be_default_SMS"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_set_default_SMS_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_switch_not_select" />

                    <ImageView
                        android:id="@+id/iv_select_default_SMS_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_switch_select"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/bg_border_item_permission"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_set_call_logs_permission"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/opensans_semibold_600"
                        android:text="@string/allow_reading_of_call_logs"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_set_call_logs_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_switch_not_select" />

                    <ImageView
                        android:id="@+id/iv_select_call_logs_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_switch_select"
                        android:visibility="invisible" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="@dimen/_20sdp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/this_app_needs_permissions_below_to_work_properly"
                android:textColor="@color/color_373A3A"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/opensans_regula_400"
                />

            <TextView
                android:id="@+id/tvContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@drawable/border_item_blue"
                android:gravity="center"
                android:backgroundTint="@color/color_FF7756"
                android:includeFontPadding="false"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:text="@string/continue2"
                android:textColor="@color/white"
                android:fontFamily="@font/opensans_medium_500"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>