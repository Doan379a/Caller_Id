<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F8">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/ripple_dialpad"
        android:src="@drawable/ic_back_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold_700"
        android:gravity="center"
        android:text="@string/call_dialer"
        android:textColor="#373A3A"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="@+id/img_back"
        app:layout_constraintTop_toTopOf="@+id/img_back" />

    <TableLayout
        android:id="@+id/dialpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_1"
                style="@style/DialpadButton"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/DialpadButton"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/DialpadButton"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_4"
                style="@style/DialpadButton"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/DialpadButton"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/DialpadButton"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_7"
                style="@style/DialpadButton"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/DialpadButton"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/DialpadButton"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_star"
                style="@style/DialpadButton"
                android:text="*" />

            <Button
                android:id="@+id/btn_0"
                style="@style/DialpadButton"
                android:text="0" />

            <Button
                android:id="@+id/btn_hash"
                style="@style/DialpadButton"
                android:text="#" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/edt_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_30sdp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/opensans_bold_700"
        android:gravity="center"
        android:textColor="#505050"
        android:maxLines="1"
        android:inputType="phone"
        android:scrollHorizontally="true"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_contact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/dialpad"
        app:layout_constraintTop_toBottomOf="@+id/edt_number" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:paddingTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp"
            android:src="@drawable/ic_phone"
            android:padding="@dimen/_10sdp"
            android:backgroundTint="@drawable/ripple_dialpad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:src="@drawable/ic_close_2"
            android:padding="@dimen/_25sdp"
            android:background="@drawable/ripple_dialpad"
            app:layout_constraintBottom_toBottomOf="@+id/img_phone"
            app:layout_constraintStart_toEndOf="@+id/img_phone"
            app:layout_constraintTop_toTopOf="@+id/img_phone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

